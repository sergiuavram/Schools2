@page
@model Schools2.Pages.Cities.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>City</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="City.ID" />
            <div class="form-group">
                <label asp-for="City.Name" class="control-label"></label>
                <input asp-for="City.Name" class="form-control" />
                <span asp-validation-for="City.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City.Population" class="control-label"></label>
                <input asp-for="City.Population" class="form-control" />
                <span asp-validation-for="City.Population" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City.CountyID" class="control-label">Select a county</label>
                <select asp-for="City.CountyID" class="form-control" asp-items="ViewBag.CountyID"></select>
                <span asp-validation-for="City.CountyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
